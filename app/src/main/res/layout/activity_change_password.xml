<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink_red">



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView

                        android:id="@+id/imageViewBack"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:src="@drawable/action_back" />

                    <TextView
                        android:id="@+id/textViewChangePwdHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="Change Password"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>


            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_below="@+id/appBarLayout"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Old Password"
                android:textColor="@color/black"
                android:textSize="15sp" />
                <EditText
                    android:id="@+id/editTextUserOldPwd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_rectangular_oval"
                    android:hint="Old password"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/grey"
                    android:textSize="17sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="New Password"
                android:textColor="@color/black"
                android:textSize="15sp" />
                <EditText
                    android:id="@+id/editTextUserNewPwd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_rectangular_oval"
                    android:hint="New password"
                    android:paddingLeft="15dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/grey"
                    android:textSize="17sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Confirm New Password"
                android:textColor="@color/black"
                android:textSize="15sp" />

                <EditText
                    android:id="@+id/editTextUserConfirmNewPwd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_rectangular_oval"
                    android:hint="Confirm new password"
                    android:paddingLeft="15dp"
                    android:imeOptions="actionDone"
                    android:inputType="number|phone"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/grey"
                    android:textSize="17sp" />



            <Button
                android:id="@+id/buttonChangePwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_css"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
